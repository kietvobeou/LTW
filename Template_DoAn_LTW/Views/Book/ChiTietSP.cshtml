@model Sach
@{
    ViewBag.Title = Model.TenSach;
    Layout = "~/Views/Shared/_NewLayout.cshtml";

    // Cast ViewBag an toàn
    var SachLienQuan_DanhMuc = ViewBag.SachLienQuan_DanhMuc as List<Sach> ?? new List<Sach>();
    var SachLienQuan_NXB = ViewBag.SachLienQuan_NXB as List<Sach> ?? new List<Sach>();

    var DanhSachBinhLuan = ViewBag.DanhSachBinhLuan as List<BinhLuan>
                           ?? new List<BinhLuan>();

    double trungBinhSao = DanhSachBinhLuan.Any()
        ? Math.Round(DanhSachBinhLuan.Average(x => (double)x.SoSao), 1)
        : 0;

    int soLuongDanhGia = DanhSachBinhLuan.Count;
}

<section class="book-detail py-5 bg-light">
    <div class="container">
        <div class="row g-5">
            <!-- Hình ảnh sách -->
            <div class="col-lg-5">
                <div class="book-image text-center">
                    <img src="~/Content/HinhAnh/@Model.HinhAnh"
                         alt="@Model.TenSach"
                         class="img-fluid rounded shadow-lg"
                         style="max-height: 600px; object-fit: contain;" />
                </div>
            </div>

            <!-- Thông tin sách -->
            <div class="col-lg-7">
                <h1 class="display-5 fw-bold text-primary mb-3">@Model.TenSach</h1>

                <!-- Đánh giá sao -->
                <div class="mb-3 d-flex align-items-center">
                    <div class="star-rating me-3">
                        @for (int i = 1; i <= 5; i++)
                        {
                            if (i <= trungBinhSao)
                            {
                                <i class="fas fa-star text-warning"></i>
                            }
                            else if (i - trungBinhSao > 0 && i - trungBinhSao < 1)
                            {
                                <i class="fas fa-star-half-alt text-warning"></i>
                            }
                            else
                            {
                                <i class="far fa-star text-muted"></i>
                            }
                        }
                    </div>
                    <span class="text-muted">(@soLuongDanhGia đánh giá)</span>
                </div>

                <!-- Giá -->
                <h2 class="text-danger fw-bold mb-4">
                    @string.Format("{0:#,#0}", Model.Gia) ₫
                </h2>

                <!-- Thông tin chi tiết -->
                <ul class="list-unstyled mb-4">
                    <li><strong>Tác giả:</strong> @Model.TacGia.TenTacGia</li>
                    <li><strong>Danh mục:</strong> @Model.DanhMuc.TenDanhMuc</li>
                    <li><strong>Nhà xuất bản:</strong> @Model.NhaXuatBan.TenNXB</li>
                    <li>
                        <strong>Tồn kho:</strong>
                        <span class="@(Model.SoLuong > 0 ? "text-success" : "text-danger")">
                            @(Model.SoLuong > 0 ? Model.SoLuong + " cuốn" : "Hết hàng")
                        </span>
                    </li>
                </ul>

                <!-- Mô tả -->
                <div class="mb-4">
                    <h5>Mô tả</h5>
                    <p class="text-justify" style="line-height: 1.8;">
                        @(string.IsNullOrEmpty(Model.MoTa) ? "Chưa có mô tả." : Model.MoTa)
                    </p>
                </div>

                <!-- Nút hành động -->
                <div class="d-flex gap-3">
                    @if (Model.SoLuong > 0)
                    {
                        <a href="@Url.Action("ThemGioHang", "GioHang", new { MaSach = Model.MaSach, url = Request.Url?.ToString() })"
                           class="btn btn-primary btn-lg px-5">
                            <i class="fas fa-cart-plus me-2"></i>Thêm vào giỏ hàng
                        </a>
                    }
                    else
                    {
                        <button class="btn btn-secondary btn-lg px-5" disabled>Hết hàng</button>
                    }

                    <a href="@Url.Action("Index", "Book")" class="btn btn-outline-secondary btn-lg">
                        <i class="fas fa-arrow-left me-2"></i>Quay lại
                    </a>
                </div>
            </div>
        </div>

        <!-- ================== BÌNH LUẬN ================== -->
        <div class="row mt-5">
            <div class="col-12">

                <h4 class="mb-4 fw-bold text-primary">
                    Đánh giá từ khách hàng (@soLuongDanhGia)
                </h4>

                <!-- ===== THÔNG BÁO ===== -->
                @if (TempData["Success"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show">
                        @TempData["Success"]
                        <button class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                @if (TempData["Error"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show">
                        @TempData["Error"]
                        <button class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                <!-- ================== FORM BÌNH LUẬN ================== -->
                @if (User.Identity.IsAuthenticated)
                {
                    <form action="@Url.Action("ThemBinhLuan","Book")"
                          method="post"
                          class="mb-4">

                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(m => m.MaSach)

                        <div class="mb-2">
                            <select name="SoSao" class="form-select" required>
                                <option value="5">★★★★★ Tuyệt vời</option>
                                <option value="4">★★★★ Rất tốt</option>
                                <option value="3">★★★ Tốt</option>
                                <option value="2">★★ Trung bình</option>
                                <option value="1">★ Kém</option>
                            </select>
                        </div>

                        <div class="mb-2">
                            <textarea name="NoiDung"
                                      class="form-control"
                                      rows="3"
                                      placeholder="Viết đánh giá của bạn..."
                                      required></textarea>
                        </div>

                        <button class="btn btn-success">
                            <i class="fas fa-paper-plane me-1"></i>
                            Gửi bình luận
                        </button>
                    </form>
                }
                else
                {
                    <div class="alert alert-info mb-4">
                        Vui lòng
                        <a href="@Url.Action("Index","DangNhap")"
                           class="fw-bold">đăng nhập</a>
                        để bình luận
                    </div>
                }

                <hr />

                <!-- ================== DANH SÁCH BÌNH LUẬN ================== -->
                @if (DanhSachBinhLuan != null && DanhSachBinhLuan.Any())
                {
                    foreach (var bl in DanhSachBinhLuan)
                    {
                        var nd = bl.NguoiDung;

                        <div class="card mb-3 shadow-sm">
                            <div class="card-body">

                                <div class="d-flex justify-content-between mb-1">
                                    <strong>@(nd?.HoTen ?? "Khách")</strong>
                                    <small class="text-muted">
                                        @(bl.NgayBL.HasValue ? bl.NgayBL.Value.ToString("dd/MM/yyyy") : "")

                                    </small>
                                </div>

                                <div class="mb-2">
                                    @for (int i = 1; i <= 5; i++)
                                    {
                                        <i class="@(i <= bl.SoSao
                                        ? "fas fa-star text-warning"
                                        : "far fa-star text-muted")"></i>
                                    }
                                </div>

                                <p class="mb-0">@bl.NoiDung</p>

                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="text-center text-muted py-4">
                        <i class="fas fa-comment-slash fa-2x mb-2"></i>
                        <p>Chưa có bình luận nào</p>
                    </div>
                }

            </div>
        </div>

        <!-- Sách cùng thể loại -->
        @if (SachLienQuan_DanhMuc.Any())
        {
            <div class="mt-5">
                <h4 class="mb-4">Sách cùng thể loại</h4>
                <div class="row row-cols-2 row-cols-md-3 row-cols-lg-5 g-4">
                    @foreach (var item in SachLienQuan_DanhMuc)
                    {
                        <div class="col">
                            <div class="card h-100 shadow-sm hover-shadow">
                                <a href="@Url.Action("ChiTietSP", "Book", new { masp = item.MaSach })">
                                    <img src="~/Content/HinhAnh/@item.HinhAnh" class="card-img-top" alt="@item.TenSach" style="height: 250px; object-fit: cover;" />
                                </a>
                                <div class="card-body text-center">
                                    <h6 class="card-title text-truncate-2">@item.TenSach</h6>
                                    <p class="card-text text-danger fw-bold">@string.Format("{0:#,#0}", item.Gia) ₫</p>
                                    <a href="@Url.Action("ThemGioHang", "GioHang", new { MaSach = item.MaSach })"
                                       class="btn btn-sm btn-primary w-100">Thêm giỏ</a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        }

        @if (SachLienQuan_NXB.Any())
        {
            <div class="mt-5">
                <h4 class="mb-4">Sách cùng nhà xuất bản</h4>
                <div class="row row-cols-2 row-cols-md-3 row-cols-lg-5 g-4">
                    @foreach (var item in SachLienQuan_NXB)
                    {
                        <div class="col">
                            <div class="card h-100 shadow-sm hover-shadow">
                                <a href="@Url.Action("ChiTietSP", "Book", new { masp = item.MaSach })">
                                    <img src="~/Content/HinhAnh/@item.HinhAnh" class="card-img-top" alt="@item.TenSach" style="height: 250px; object-fit: cover;" />
                                </a>
                                <div class="card-body text-center">
                                    <h6 class="card-title text-truncate-2">@item.TenSach</h6>
                                    <p class="card-text text-danger fw-bold">@string.Format("{0:#,#0}", item.Gia) ₫</p>
                                    <a href="@Url.Action("ThemGioHang", "GioHang", new { MaSach = item.MaSach })" class="btn btn-sm btn-primary w-100">Thêm giỏ</a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        }
    </div>
</section>

@section Styles {
    <style>
        .hover-shadow {
            transition: all 0.3s ease;
        }

            .hover-shadow:hover {
                transform: translateY(-8px);
                box-shadow: 0 12px 25px rgba(0,0,0,0.15) !important;
            }

        .text-truncate-2 {
            overflow: hidden;
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
        }
    </style>
}