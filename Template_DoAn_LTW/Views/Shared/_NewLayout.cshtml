<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - BookStore | Thế giới sách cao cấp</title>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;500;600;700&family=Inter:wght@300;400;500;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="~/Content/bootstrap/css/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/style.css" rel="stylesheet" />
    @RenderSection("Styles", required: false)
</head>
<body>
    <header class="site-header" style="background-color: #001f3f;">
        <div class="container header-inner py-3">
            <div class="d-flex align-items-center justify-content-between flex-wrap gap-3">

                <!-- Logo -->
                <a href="@Url.Action("Index", "Book")" class="logo fw-bold fs-3 text-white text-decoration-none">
                    Book<span style="color: #ffc107;">Store</span>
                </a>

                <!-- Navigation -->
                <nav class="main-nav d-flex align-items-center gap-4 flex-wrap">
                    <a href="@Url.Action("Index", "Book")" class="text-white text-decoration-none fw-medium">
                        <i class="fas fa-home me-2"></i> Trang chủ
                    </a>
                    <div class="dropdown position-relative">
                        <a href="#" class="dropbtn text-white text-decoration-none fw-medium">
                            <i class="fas fa-book me-2"></i> Loại Sách <i class="fas fa-chevron-down small"></i>
                        </a>
                        <div class="dropdown-content position-absolute bg-white text-dark shadow rounded mt-2 py-2" style="min-width: 220px; z-index: 1000;">
                            @Html.Action("_DanhMucTheLoai", "DanhMuc")
                        </div>
                    </div>
                    <a href="#" class="text-white text-decoration-none fw-medium">
                        <i class="fas fa-info-circle me-2"></i> Giới thiệu
                    </a>
                    <a href="#" class="text-white text-decoration-none fw-medium">
                        <i class="fas fa-phone-alt me-2"></i> Liên hệ
                    </a>
                </nav>

                <!-- Search Box -->
                <form class="search-box d-flex" action="@Url.Action("TimKiem", "Book")" method="get">
                    <div class="input-group" style="max-width: 400px;">
                        <input type="text" name="kw" class="form-control rounded-pill border-0 py-2" placeholder="Tìm sản phẩm..." aria-label="Tìm kiếm" />
                        <button type="submit" class="btn btn-light rounded-pill position-absolute end-0 me-2" style="z-index: 3; height: 38px; width: 38px;">
                            <i class="fas fa-search text-primary"></i>
                        </button>
                    </div>
                </form>

                <!-- Giỏ hàng + Tài khoản -->
                <div class="d-flex align-items-center gap-3 flex-wrap">

                    @{
                        var sl = Session["SoLuong"] != null ? (int)Session["SoLuong"] : 0;
                    }

                    <!-- Giỏ hàng -->
                    <a href="@Url.Action("Index", "GioHang")" class="btn btn-outline-light rounded-pill position-relative px-4 py-2 fw-bold">
                        <i class="fas fa-shopping-cart me-2"></i> Giỏ Hàng
                        @if (sl > 0)
                        {
                            <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                                @sl
                            </span>
                        }
                    </a>

                    <!-- Tài khoản -->
                    @if (Session["TenKH"] != null)
                    {
                        <a href="@Url.Action("HoSo", "TaiKhoan")" class="text-decoration-none d-flex align-items-center gap-2 text-white">
                            <img src="~/Content/HinhAnh/@(Session["AnhDaiDien"] ?? "default-avatar.jpg")"
                                 alt="Avatar"
                                 class="rounded-circle border border-warning border-3"
                                 style="width: 40px; height: 40px; object-fit: cover;" />
                            <span class="fw-bold">@Session["TenKH"]</span>
                        </a>

                        <a href="@Url.Action("DangXuat", "DangNhap")" class="btn btn-outline-danger rounded-pill px-4 py-2 fw-bold">
                            <i class="fas fa-sign-out-alt me-2"></i> Đăng xuất
                        </a>
                    }
                    else
                    {
                        <a href="@Url.Action("Index", "DangNhap")" class="btn btn-warning rounded-pill px-4 py-2 fw-bold shadow">
                            <i class="fas fa-user me-2"></i> Đăng Nhập
                        </a>
                    }
                </div>
            </div>
        </div>
    </header>

    <!-- Main và Footer giữ nguyên như code cũ của bạn -->
    <main class="container site-main my-5">
        <div class="row">
            <aside class="col-lg-3 mb-5">
                <div class="sidebar bg-light p-4 rounded shadow-sm">
                    <h4 class="fw-bold mb-4"><i class="fas fa-list me-2"></i> Danh mục sách</h4>
                    @Html.Action("_DanhMuc", "DanhMuc")
                </div>
            </aside>
            <section class="col-lg-9">
                @RenderBody()
            </section>
        </div>
    </main>

    <footer class="site-footer bg-dark text-light py-5 mt-5">
        <!-- Giữ nguyên footer cũ của bạn -->
        <div class="container footer-inner">
            <div class="row">
                <div class="col-md-4 footer-info">
                    <div class="footer-logo fs-3 fw-bold mb-3">Book<span class="text-warning">Store</span></div>
                    <p><i class="fas fa-map-marker-alt me-2"></i>Địa chỉ: 140 Lê Trọng Tấn, Q. Tân Phú, TP. HCM</p>
                    <p><i class="fas fa-phone me-2"></i>Điện thoại: 0909 090 909</p>
                    <p><i class="fas fa-envelope me-2"></i>Email: contact@bookstore.vn</p>
                </div>
                <div class="col-md-4 footer-links">
                    <h5 class="mb-3">Liên kết nhanh</h5>
                    <a href="#" class="text-light text-decoration-none">Trang chủ</a><br>
                    <a href="#" class="text-light text-decoration-none">Sách mới</a><br>
                    <a href="#" class="text-light text-decoration-none">Sách bán chạy</a><br>
                    <a href="#" class="text-light text-decoration-none">Khuyến mãi</a>
                </div>
                <div class="col-md-4 footer-links">
                    <h5 class="mb-3">Hỗ trợ</h5>
                    <a href="#" class="text-light text-decoration-none">Câu hỏi thường gặp</a><br>
                    <a href="#" class="text-light text-decoration-none">Chính sách đổi trả</a><br>
                    <a href="#" class="text-light text-decoration-none">Hướng dẫn mua hàng</a><br>
                    <a href="#" class="text-light text-decoration-none">Phương thức thanh toán</a>
                </div>
            </div>
            <div class="copy text-center mt-4 pt-4 border-top border-secondary">
                © 2025 BookStore. All rights reserved. | Designed with <i class="fas fa-heart text-warning"></i>
            </div>
        </div>
    </footer>

    <script>
        // Giữ nguyên script dropdown và search focus như cũ
        document.addEventListener('DOMContentLoaded', function () {
            const dropdowns = document.querySelectorAll('.dropdown');
            dropdowns.forEach(dropdown => {
                const dropbtn = dropdown.querySelector('.dropbtn');
                dropbtn.addEventListener('click', function (e) {
                    if (window.innerWidth <= 768) {
                        e.preventDefault();
                        const content = dropdown.querySelector('.dropdown-content');
                        content.style.display = content.style.display === 'block' ? 'none' : 'block';
                    }
                });
            });

            document.addEventListener('click', function (e) {
                if (!e.target.matches('.dropbtn') && !e.target.closest('.dropdown')) {
                    document.querySelectorAll('.dropdown-content').forEach(content => {
                        content.style.display = 'none';
                    });
                }
            });
        });
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>