@model NguoiDung

@{
    ViewBag.Title = "Hồ sơ cá nhân";
    Layout = "~/Views/Shared/_NewLayout.cshtml";

    // XỬ LÝ AVATAR (LOCAL / URL / DEFAULT)
    string avatar = Model.AnhDaiDien;

    if (string.IsNullOrEmpty(avatar))
    {
        avatar = Url.Content("~/Content/HinhAnh/default-avatar.jpg");
    }
    else if (!avatar.StartsWith("http"))
    {
        avatar = Url.Content("~/Content/HinhAnh/" + avatar);
    }
}

<section class="profile py-5 bg-light min-vh-100 d-flex align-items-center">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8 col-xl-7">
                <div class="card shadow-xl border-0 rounded-4 overflow-hidden">

                    <div class="card-header text-white text-center py-4">
                        <h2 class="mb-0 fw-bold">Hồ sơ cá nhân</h2>
                        <p class="mb-0 opacity-75">Cập nhật thông tin và ảnh đại diện của bạn</p>
                    </div>

                    <div class="card-body p-5">

                        @if (TempData["Success"] != null)
                        {
                            <div class="alert alert-success alert-dismissible fade show">
                                <i class="fas fa-check-circle me-2"></i>
                                @TempData["Success"]
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            </div>
                        }

                        @using (Html.BeginForm("HoSo", "TaiKhoan", FormMethod.Post,
                               new { enctype = "multipart/form-data", @class = "needs-validation", novalidate = true }))
                        {
                            @Html.AntiForgeryToken()

                            <!-- AVATAR -->
                            <div class="text-center mb-5">
                                <div class="position-relative d-inline-block">
                                    <img src="@avatar"
                                         id="avatarPreview"
                                         alt="Avatar"
                                         class="rounded-circle shadow-lg"
                                         style="width:150px;height:150px;object-fit:cover;border:4px solid #fff;" />

                                    <label for="AnhDaiDienUpload"
                                           class="position-absolute bottom-0 end-0 bg-primary rounded-circle p-2 cursor-pointer shadow">
                                        <i class="fas fa-camera text-white"></i>
                                        <input type="file"
                                               name="AnhDaiDienUpload"
                                               id="AnhDaiDienUpload"
                                               accept="image/*"
                                               class="d-none"
                                               onchange="previewAvatarFile(this)" />
                                    </label>
                                </div>

                                <p class="mt-3 text-muted small">
                                    Upload ảnh từ máy hoặc dán link ảnh bên dưới
                                </p>
                            </div>

                            <!-- LINK ẢNH NGOÀI -->
                            <div class="mb-4">
                                <label class="form-label fw-semibold">Link ảnh đại diện (URL)</label>
                                <input type="text"
                                       name="AnhDaiDienUrl"
                                       class="form-control"
                                       placeholder="https://example.com/avatar.jpg"
                                       oninput="previewAvatarUrl(this.value)" />
                            </div>

                            <!-- THÔNG TIN -->
                            <div class="row g-4">
                                <div class="col-md-6">
                                    <label class="form-label fw-semibold">Họ và tên</label>
                                    @Html.TextBoxFor(m => m.HoTen,
                                        new { @class = "form-control form-control-lg", required = "required" })
                                </div>

                                <div class="col-md-6">
                                    <label class="form-label fw-semibold">Email</label>
                                    <input type="email"
                                           value="@Model.Email"
                                           class="form-control form-control-lg bg-light"
                                           readonly />
                                </div>

                                <div class="col-md-6">
                                    <label class="form-label fw-semibold">Số điện thoại</label>
                                    @Html.TextBoxFor(m => m.SDT,
                                        new { @class = "form-control form-control-lg" })
                                </div>

                                <div class="col-md-6">
                                    <label class="form-label fw-semibold">Địa chỉ</label>
                                    @Html.TextBoxFor(m => m.DiaChi,
                                        new { @class = "form-control form-control-lg" })
                                </div>
                            </div>

                            <div class="text-center mt-5">
                                <button type="submit"
                                        class="btn btn-primary btn-lg px-5 py-3 fw-bold shadow-sm">
                                    <i class="fas fa-save me-2"></i> Cập nhật hồ sơ
                                </button>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        function previewAvatarFile(input) {
            if (input.files && input.files[0]) {
                const reader = new FileReader();
                reader.onload = e => document.getElementById("avatarPreview").src = e.target.result;
                reader.readAsDataURL(input.files[0]);
            }
        }

        function previewAvatarUrl(url) {
            if (url && url.startsWith("http")) {
                document.getElementById("avatarPreview").src = url;
            }
        }

        // Bootstrap validation
        (function () {
            'use strict'
            document.querySelectorAll('.needs-validation').forEach(form => {
                form.addEventListener('submit', e => {
                    if (!form.checkValidity()) {
                        e.preventDefault();
                        e.stopPropagation();
                    }
                    form.classList.add('was-validated');
                });
            });
        })();
    </script>
}

@section Styles {
    <style>
        .card-header {
            background: linear-gradient(135deg, #007bff, #0056b3);
        }

        .cursor-pointer {
            cursor: pointer;
        }

        .btn-primary:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 25px rgba(0,123,255,.3);
        }

        .shadow-xl {
            box-shadow: 0 25px 50px rgba(0,0,0,.15) !important;
        }
    </style>
}
