@model NguoiDung

@{
    ViewBag.Title = "Hồ sơ cá nhân";
    Layout = "~/Views/Shared/_NewLayout.cshtml";
}

<section class="profile py-5 bg-light min-vh-100 d-flex align-items-center">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8 col-xl-7">
                <div class="card shadow-xl border-0 rounded-4 overflow-hidden">
                    <div class="card-header bg-primary text-white text-center py-4">
                        <h2 class="mb-0 fw-bold">Hồ sơ cá nhân</h2>
                        <p class="mb-0 opacity-75">Cập nhật thông tin và ảnh đại diện của bạn</p>
                    </div>
                    <div class="card-body p-5">

                        @if (TempData["Success"] != null)
                        {
                            <div class="alert alert-success alert-dismissible fade show" role="alert">
                                <i class="fas fa-check-circle me-2"></i>
                                @TempData["Success"]
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            </div>
                        }

                        @using (Html.BeginForm("HoSo", "TaiKhoan", FormMethod.Post, new { enctype = "multipart/form-data", @class = "needs-validation", novalidate = true }))
                        {
                            @Html.AntiForgeryToken()

                            <div class="text-center mb-5">
                                <div class="position-relative d-inline-block">
                                    <img src="~/Content/HinhAnh/@(Model.AnhDaiDien ?? "default-avatar.jpg")"
                                         id="avatarPreview"
                                         alt="Avatar"
                                         class="rounded-circle shadow-lg"
                                         style="width: 150px; height: 150px; object-fit: cover; border: 4px solid #fff;" />

                                    <label for="AnhDaiDienUpload" class="position-absolute bottom-0 end-0 bg-primary rounded-circle p-2 cursor-pointer shadow">
                                        <i class="fas fa-camera text-white"></i>
                                        <input type="file" name="AnhDaiDienUpload" id="AnhDaiDienUpload" accept="image/*" class="d-none" onchange="previewAvatar(this);" />
                                    </label>
                                </div>
                                <p class="mt-3 text-muted small">Click vào biểu tượng máy ảnh để thay đổi</p>
                            </div>

                            <div class="row g-4">
                                <div class="col-md-6">
                                    <label class="form-label fw-semibold">Họ và tên</label>
                                    @Html.TextBoxFor(m => m.HoTen, new { @class = "form-control form-control-lg", required = "required", placeholder = "Nhập họ tên" })
                                </div>

                                <div class="col-md-6">
                                    <label class="form-label fw-semibold">Email (không thể thay đổi)</label>
                                    <input type="email" value="@Model.Email" class="form-control form-control-lg bg-light" readonly />
                                </div>

                                <div class="col-md-6">
                                    <label class="form-label fw-semibold">Số điện thoại</label>
                                    @Html.TextBoxFor(m => m.SDT, new { @class = "form-control form-control-lg", placeholder = "Nhập số điện thoại" })
                                </div>

                                <div class="col-md-6">
                                    <label class="form-label fw-semibold">Địa chỉ</label>
                                    @Html.TextBoxFor(m => m.DiaChi, new { @class = "form-control form-control-lg", placeholder = "Nhập địa chỉ" })
                                </div>
                            </div>

                            <div class="text-center mt-5">
                                <button type="submit" class="btn btn-primary btn-lg px-5 py-3 fw-bold shadow-sm">
                                    <i class="fas fa-save me-2"></i> Cập nhật hồ sơ
                                </button>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        function previewAvatar(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                reader.onload = function (e) {
                    $('#avatarPreview').attr('src', e.target.result);
                }
                reader.readAsDataURL(input.files[0]);
            }
        }

        // Client-side validation feedback
        (function () {
            'use strict'
            var forms = document.querySelectorAll('.needs-validation')
            Array.prototype.slice.call(forms).forEach(function (form) {
                form.addEventListener('submit', function (event) {
                    if (!form.checkValidity()) {
                        event.preventDefault()
                        event.stopPropagation()
                    }
                    form.classList.add('was-validated')
                }, false)
            })
        })()
    </script>
}

@section Styles {
    <style>
        .card-header {
            background: linear-gradient(135deg, #007bff, #0056b3);
        }

        .cursor-pointer {
            cursor: pointer;
        }

        .btn-primary {
            transition: all 0.3s ease;
        }

            .btn-primary:hover {
                transform: translateY(-3px);
                box-shadow: 0 10px 25px rgba(0,123,255,0.3);
            }

        .shadow-xl {
            box-shadow: 0 25px 50px rgba(0,0,0,0.15) !important;
        }
    </style>
}